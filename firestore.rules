rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra global permissiva para evitar erros de permiss√£o durante o desenvolvimento.
    // Isso garante acesso tanto a 'transactions' quanto 'announced_dividends'.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
