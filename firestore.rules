rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regra permissiva para desenvolvimento. Concede acesso a todas as coleções.
    // Em produção, esta regra deve ser substituída por regras de autenticação granulares.
    // Ex: allow read, write: if request.auth != null;
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
