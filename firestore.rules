rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regra Global (Modo Teste/Desenvolvimento)
    // Permite leitura e escrita em TODAS as coleções (transactions, announced_dividends, etc.)
    // Isso corrige o erro de permissão insuficiente.
    match /{document=**} {
      allow read, write: if true;
    }
  }
}
